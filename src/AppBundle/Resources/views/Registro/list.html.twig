{% extends "AppBundle:Default:admin.html.twig"%}
{% block title %}
    Listado de Registros
{% endblock %}
{% block action_content %}
    <div class="card">
        <div class="card-header">Registros</div>
        <div class="card-body">
            <table class="table table-bordered" style="font-size: 12px">
                <thead>
                    <tr>
                        <th>Numero</th>
                        <th>Descripcion</th>
                        <th>Direccion</th>
                        <th>Telefono</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {% for registro in registros %}
                        <tr>
                            <td>{{ registro.number }}</td>
                            <td>{{ registro.description }}</td>
                            <td>{{ registro.address }}</td>
                            <td>{{ registro.phone }}</td>                      
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="{{ path('registro_edit',{'id': registro.id})}}" id="account" class="btn btn-sm" role="button">
                                        <span class="fa fa-edit" aria-hidden="true"></span>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor%}
                </tbody>
            </table>
        </div>
    </div>

{% endblock %} 