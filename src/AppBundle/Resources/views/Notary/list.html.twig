{% extends "AppBundle:Default:admin.html.twig"%}
{% block action_content %}

    <div class="panel panel-default">
        <div class="panel-heading">Listar Notarios</div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-bordered" style="font-size: 12px">
                    <thead>
                        <tr>
                            <th>{{ sorter_link(notaries, "n.id", "#")}}</th>
                            <th>{{ sorter_link(notaries, "n.idPerson", "DNI")}}</th>
                            <th>{{ sorter_link(notaries, "n.firstName", "Nombre")}}</th>
                            <th>{{ sorter_link(notaries, "n.lastName", "Apellido")}}</th>                            
                            <th>Telefono</th>
                            <th>E-mail</th>
                            <th>Usuario</th>
                            <th>{{ sorter_link(notaries, "r.description", "Registro")}}</th>   
                            <th>{{ sorter_link(notaries, "nt.description", "Tipo")}}</th>   
                            <th>Cuenta</th>
                        </tr>

                    </thead>
                    <tbody>
                        {% for notary in notaries %}
                            <tr>
                                <td>{{ notary.id }}</td>
                                <td>{{ notary.idPerson }}</td>
                                <td>{{ notary.firstName }}</td>
                                <td>{{ notary.lastName }}</td>
                                <td>{{ notary.phone }}</td>
                                <td>{{ notary.email }}</td>
                                <td>{{ notary.username }}</td>
                                <td>{{ notary.registro.description }}</td>
                                <td>{{ notary.notaryTypeId.description }}</td>                        
                                <td>
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a href="{{ path('account_show',{'id': notary.account.id})}}" role="button" class="btn btn-default btn-xs">
                                            <i class="fa fa-suitcase" aria-hidden="true"></i>
                                        </a>
                                        <a href="{{ path('notary_edit',{'id': notary.id})}}"  role="button" class="btn btn-default btn-xs">
                                            <i class="fa fa-edit" aria-hidden="true"></i>
                                        </a>
                                        <a href="{{ path('action_accredit',{'id': notary.id })}}"  role="button" class="btn btn-default btn-xs">
                                            <i class="fa fa-money" aria-hidden="true"></i>
                                        </a>
                                        <a href="{{ path('person_change_password',{'person': notary.id})}}"  role="button" class="btn btn-default btn-xs">
                                            <i class="fa fa-key" aria-hidden="true"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor%}
                    </tbody>
                </table> 
                <div class="text-center">
                    {{ pagination(notaries) }}
                </div>
            </div>
        </div>
    </div>


{% endblock %} 