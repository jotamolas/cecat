{% extends is_granted('ROLE_NOTARIO') 
? 'AppBundle:Default:front.html.twig' 
: 'AppBundle:Default:admin.html.twig' %}


{% block stylesheets %}


<style type="text/css">
.card-renaper{
   font-size: 14px;
   box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);  
   padding-top: 7px;
   padding-bottom: 5px;
   margin-bottom: 20px;
   width: 95%;
   background-color: hsla(42, 87%, 92%, 0.37)
   }
dd{
    margin-bottom: 0px !important;
}
</style>

{% endblock %}


{% block action_content %}

<div class="row card-renaper">
    <div class="col-md-4">
        <img src="{{card.foto}}" class="img-responsive" alt="" style="width: 275px">
    </div>
    <div class="col-md-8"> 
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dd>Nombres</dd>
                    <dt>{{ card.nombres | upper }}</dt> 
                </dl>                                      
            </div>
            <div class="col-md-6">
                <dl>
                    <dd>Apellido</dd>
                    <dt>{{ card.apellido | upper }}</dt> 
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dd>Domicilio</dd>
                    <dt>{{ card.calle}} {{ card.numero}}</dt> 
                </dl>
            </div>
            <div class="col-md-6">
                <dl>
                    <dd>Barrio</dd>
                    <dt>{{ card.barrio}} {{ card.monoblock}}</dt> 
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dd>Ciudad</dd>
                    <dt>{{ card.ciudad}}</dt> 
                </dl>
            </div>
            <div class="col-md-6">
                <dl>
                    <dd>Municipio</dd>
                    <dt>{{ card.municipio}}</dt> 
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dd>Provincia</dd>
                    <dt>{{ card.provincia}}</dt> 
                </dl>
            </div>
            <div class="col-md-6">
                <dl>
                    <dd>Pa√≠s</dd>
                    <dt>{{ card.pais}}</dt> 
                </dl>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <dl>
                    <dd>Fecha Nacimiento</dd>
                    <dt>{{ card.fechaNacimiento}}</dt> 
                </dl>
            </div>
            <div class="col-md-4">
                <dl>
                    <dd>Id Ciudadano</dd>
                    <dt>{{ card.idciudadano}}</dt> 
                </dl>
            </div>
            <div class="col-md-4">
                <dl>
                    <dd>Ejemplar</dd>
                    <dt>{{ card.EJEMPLAR}}</dt>
                </dl>

            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dd>Mensaje Fallecimiento</dd>
                    <dt>{{ card.mensaf}}</dt>
                </dl>
            </div>
            <div class="col-md-6">
                <dl>
                    <dd>Fecha fallecimiento</dd>
                    <dt>{{ card.fechaf}}</dt>
                </dl>
            </div>
        </div>                
    </div>
</div>

<div class="row">
    {% if  file is defined %}
        <a href="/renaper/{{ file }}" class="btn btn-outline-success btn-sm"><i class="fa fa-file-pdf-o fa-lg"></i> Descargar</a> 
    {% endif %}
</div>  

{% endblock %}